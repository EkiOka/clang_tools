---
# 引数は左揃え
AlignAfterOpenBracket: BlockIndent

# 連続する行の = の位置を揃える
AlignConsecutiveAssignments: true

# 連続する行の宣言の位置を揃える
AlignConsecutiveDeclarations: true

# マクロの位置を揃える
AlignConsecutiveMacros: true

# 二項演算子と三項演算子を揃える
AlignOperands: true

# 連続する行のコメントの位置揃える
AlignTrailingComments: true

# 短い関数を単一行にしない
AllowShortFunctionsOnASingleLine: false

# { } の位置
# "BreakBeforeBraces: Custom" の場合に有効となる
# true なら独立行にする
BraceWrapping:
  AfterControlStatement: false # 制御文の後
  AfterEnum: true # enumの後 (単一行にしないため)
  AfterFunction: true # 関数の後
  AfterStruct: true # structの後 (単一行にしないため)
  AfterUnion: true # unionの後 (単一行にしないため)
  AfterExternBlock: false # externの後
  BeforeCatch: false # catchの前
  BeforeElse: false # elseの前

# { } の位置をカスタム設定する
BreakBeforeBraces: Linux

# 1行の文字数を制限する (0で無制限)
ColumnLimit: 0

# includeソート
#IncludeBlocks: Preserve

# case インデント
IndentCaseLabels: true

# インデントサイズ
IndentWidth: 4

# ポインターの*と&の位置
PointerAlignment: Left

# キャストの後ろのスペース
SpaceAfterCStyleCast: false

# 制御文の ( の前のスペース
SpaceBeforeParens: ControlStatements

# コメントの前に入れるスペース数
SpacesBeforeTrailingComments: 4

AllowAllArgumentsOnNextLine: true
